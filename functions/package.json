    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.0.0",
    "nodemailer": "^6.9.0",
    "@sendgrid/mail": "^8.1.0",
    "cors": "^2.8.5",
    "express": "^4.19.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.14"
  },
  "private": true
}

